package nomes;

public class NomeString {
	private String nome1;
	private String nome2;
	private String nome3;
	
	public NomeString(String nome1, String nome2, String nome3) {
		this.nome1=nome1;
		this.nome2=nome2;
		this.nome3=nome3;
	}
	public String getNome1() {
		return nome1;
	}
	public void setNome1(String nome1) {
		this.nome1 = nome1;
	}
	public String getNome2() {
		return nome2;
	}
	public void setNome2(String nome2) {
		this.nome2 = nome2;
	}
	public String getNome3() {
		return nome3;
	}
	public void setNome3(String nome3) {
		this.nome3 = nome3;
	}
	public char primeiraLetra(String nome) {
		//String nomeTemp;
		return nome.charAt(0);
		}
	@Override
	public String toString() {
		return  nome1.toUpperCase().charAt(0) +"."+ nome2.toUpperCase().charAt(0)+"."+nome3.substring(0,1).toUpperCase()+nome3.substring(1);
	}

}
